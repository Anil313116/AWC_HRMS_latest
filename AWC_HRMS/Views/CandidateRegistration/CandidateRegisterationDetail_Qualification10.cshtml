                <input type="submit" button class="btn btn-info" value="Save" formaction="" />
                <!-- <input type="button" value="Preview" onclick="Response.redirect('CandidateRegisterationDetailNext')" class="btn button_color1" />-->
                @Html.ActionLink("Next", "CandidateRegisterationDetail_Employement", new { id=ViewBag.NewCId },new{@id="form13next",@class = "btn btn-info"})
                
            </div>
